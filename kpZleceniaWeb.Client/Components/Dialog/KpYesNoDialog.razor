@using kpZleceniaWeb.Client.Models.Components.Dialog
@implements IDialogContentComponent<KPYesNoDialogModel>

<FluentDialogHeader>
    <FluentLabel>@Content.Title</FluentLabel>
</FluentDialogHeader>
<FluentDialogBody>
    <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center">
        <FluentIcon Value="@(new Icons.Regular.Size48.QuestionCircle())" />
        <FluentLabel>@Content.Content</FluentLabel>
    </FluentStack>
</FluentDialogBody>
<FluentDialogFooter Visible="false">
</FluentDialogFooter>
<FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.End">
    <FluentButton OnClick="YesOnClick">Tak</FluentButton>
    <FluentButton OnClick="NoOnClick">Nie</FluentButton>
</FluentStack>



@code {
    [Parameter]
    public KPYesNoDialogModel Content { get; set; }

    [CascadingParameter]
    public FluentDialog Dialog { get; set; }

    public async Task YesOnClick()
    {
        await Dialog.CloseAsync();
    }

    public async Task NoOnClick()
    {
        await Dialog.CancelAsync();
    }
}
