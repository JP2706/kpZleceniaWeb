@using Microsoft.FluentUI.AspNetCore.Components
<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="kpZleceniaWeb.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="_renderMode" />
</head>

<body>
    <div id="loading">
        <div style="position:absolute; top:40vh; width:100%; text-align:center">
        <div style="display:flex; gap:10px; justify-content:center; align-items:center">
            <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center" VerticalAlignment="VerticalAlignment.Center">
                <FluentProgressRing Width="50px" />
                <FluentLabel Typo="Typography.H5">Trwa ładowanie aplikacji...</FluentLabel>
            </FluentStack>
        </div>
    </div>
    </div>
    <Routes @rendermode="_renderMode" />
    <script>

        window.deleteElementById = function (id) {
            var element = document.getElementById(id);
            element.parentNode.removeChild(element);
        }

    </script>
    <script src="_framework/blazor.web.js"></script>
    <script src="lib/jquery/jquery.min.js"></script>
    <script src="scripts/cookieStorageAccessor.js"></script>

    <script src="_content/Microsoft.FluentUI.AspNetCore.Components/js/loading-theme.js" type="text/javascript"></script>
    <loading-theme storage-name="theme"></loading-theme>
</body>

</html>

@code {
    private static IComponentRenderMode _renderMode = new InteractiveAutoRenderMode(prerender: false);
}